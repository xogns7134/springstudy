<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="exhibition">
    <insert id="insertExhibition" parameterType="ExhibitionVO">
        INSERT INTO exhibition (exhibitionID, galleryID, exhibitionName, price)
        VALUES (#{exhibitionID}, #{galleryID}, #{exhibitionName}, #{price})
    </insert>
    <select id="oneExhibition" resultType="ExhibitionVO">
        SELECT * FROM exhibition WHERE exhibitionID = #{exhibitionID}
    </select>
    <update id="updateExhibition" parameterType="ExhibitionVO">
        UPDATE exhibition
        SET galleryID = #{galleryID}, exhibitionName = #{exhibitionName}, price = #{price}
        WHERE exhibitionID = #{exhibitionID}
    </update>
    <delete id="deleteExhibition" parameterType="String">
        DELETE FROM exhibition WHERE exhibitionID = #{exhibitionID}
    </delete>
    <select id="listExhibition" resultType="ExhibitionVO">
        SELECT * FROM exhibition
    </select>
</mapper>